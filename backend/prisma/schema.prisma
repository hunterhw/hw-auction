generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lot {
  id           String    @id @default(cuid())
  title        String
  imageUrl     String
  description  String?
  startPrice   Int
  bidStep      Int       @default(10)
  currentPrice Int
  leaderUserId String?
  status       LotStatus @default(SCHEDULED)
  startsAt     DateTime
  endsAt       DateTime
  createdAt    DateTime  @default(now())
  endedNotifiedAt      DateTime?
  endingSoonNotifiedAt DateTime?
  bids         Bid[]
  autoBids  AutoBid[]
  comments  Comment[]
  endedNotifiedAt DateTime? // чтобы “победа/проигрыш” не слать 100 раз
  
}

model Bid {
  id        String   @id @default(cuid())
  lotId     String
  userId    String
  userName  String
  amount    Int
  createdAt DateTime @default(now())

  lot Lot @relation(fields: [lotId], references: [id], onDelete: Cascade)

  @@index([lotId, createdAt])
}

enum LotStatus {
  SCHEDULED
  LIVE
  ENDED
}
model AutoBid {
  id         String   @id @default(cuid())
  lotId      String
  userId     String
  userName   String
  maxAmount  Int
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  lot Lot @relation(fields: [lotId], references: [id], onDelete: Cascade)

  @@unique([lotId, userId])
  @@index([lotId, maxAmount])
}
