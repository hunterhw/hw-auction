generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LotStatus {
  SCHEDULED
  LIVE
  ENDED
}

model Lot {
  id              String    @id @default(cuid())
  title           String
  imageUrl        String
  description     String?
  startPrice      Int
  bidStep         Int       @default(10)
  currentPrice    Int
  leaderUserId    String?
  status          LotStatus @default(SCHEDULED)
  startsAt        DateTime
  endsAt          DateTime
  createdAt       DateTime  @default(now())

  // ✅ уведомления, чтобы не слать 100 раз
  endedNotifiedAt      DateTime?
  endingSoonNotifiedAt DateTime?

  bids      Bid[]
  autoBids  AutoBid[]   // ✅ обратная связь для AutoBid
  comments  Comment[]   // ✅ комментарии
}

model Bid {
  id        String   @id @default(cuid())
  lotId     String
  userId    String
  userName  String
  amount    Int
  createdAt DateTime @default(now())

  lot Lot @relation(fields: [lotId], references: [id], onDelete: Cascade)

  @@index([lotId, createdAt])
  @@index([userId, createdAt])
}

model AutoBid {
  id         String   @id @default(cuid())
  lotId      String
  userId     String
  userName   String
  maxAmount  Int
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  lot Lot @relation(fields: [lotId], references: [id], onDelete: Cascade)

  @@unique([lotId, userId])
  @@index([lotId, maxAmount])
}

model Comment {
  id        String   @id @default(cuid())
  lotId     String
  userId    String
  userName  String
  text      String
  createdAt DateTime @default(now())

  lot Lot @relation(fields: [lotId], references: [id], onDelete: Cascade)

  @@index([lotId, createdAt])
}
